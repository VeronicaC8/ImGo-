<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.veronica.imgo.sitioDeleteActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Sitio"
        android:textAlignment="center"
        android:textColor="@color/colorBitterSweet"
        android:textSize="30dp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/idSit"
        android:textColor="@color/colorBlack"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:text="Id Sitio"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        app:layout_constraintEnd_toStartOf="@+id/editIdSitio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idUser"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editIdSitio"
        android:textColor="@color/colorBlack"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/editNombreSitio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idSit"
        app:layout_constraintTop_toBottomOf="@+id/editIdCategoria"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="480dp"
        android:onClick="eliminarSitio"
        android:text="Eliminar"
        tools:ignore="MissingConstraints,OnClick" />



</FrameLayout>
