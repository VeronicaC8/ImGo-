<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/gps"
                android:textAlignment="center"
                android:text="Categorias"
                android:textSize="24sp"
                android:gravity="bottom"
                android:textColor="@color/colorFlower"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/colorGrapeFruit"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_restaurante"
                        android:tint="@color/colorWhiteC"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorGrapeFruitDark"
                        android:text="Restaurantes"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhiteC"
                        />



                </LinearLayout>

                <!--BARES-->

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/colorMint"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_beer"
                        android:tint="@color/colorWhiteC"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorMintDark"
                        android:text="Bares"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhiteC"
                        />


                </LinearLayout>



            </LinearLayout>


            <!--SEGUNDA FILA-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <!--Parques-->
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/colorYellow"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_parque"
                        android:tint="@color/colorWhiteC"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorYellowDark"
                        android:text="Parques"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhiteC"
                        />



                </LinearLayout>

                <!--Entretenimiento-->

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/colorLavander"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_beer"
                        android:tint="@color/colorWhite"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorLavanderDark"
                        android:text="Entretenimiento"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhiteC"
                        />


                </LinearLayout>



            </LinearLayout>









        </LinearLayout>

    </ScrollView>



</LinearLayout>